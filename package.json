{
    "name": "@script-development/vue-services",
    "version": "0.0.38",
    "description": "Services for Vue SPA App",
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "typings": "types/index.d.ts",
    "files": [
        "dist",
        "types",
        "src"
    ],
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "rollup src/index.js --file dist/index.js --format iife",
        "dev": "rollup -c scripts/config.js",
        "watch": "npm run dev -w",
        "pub": "npm publish"
    },
    "author": "Script",
    "license": "MIT",
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^8.1.0",
        "prettier": "^2.0.5",
        "husky": "^4.2.5",
        "pretty-quick": "^2.0.1",
        "rollup": "^2.21.0"
    },
    "dependencies": {
        "axios": "0.19.2",
        "bootstrap-vue": "^2.15.0",
        "vue": "2.6.11",
        "vue-router": "3.3.4",
        "vuex": "3.5.1"
    },
    "peerDependencies": {
        "@msgpack/msgpack": "^1.12.2"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged --pattern \"**/*.*(js|json)\""
        }
    }
}
