{
    "name": "@script-development/vue-services",
    "version": "0.1.0",
    "description": "Services for Vue SPA App",
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "typings": "types/index.d.ts",
    "files": [
        "dist",
        "types",
        "src"
    ],
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "rollup src/index.js --file dist/index.js --format iife",
        "dev": "rollup -c scripts/config.js",
        "watch": "rollup -c scripts/config.js --watch",
        "pub": "npm version minor && npm publish",
        "docs": "typedoc"
    },
    "author": "Script",
    "license": "MIT",
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^9.0.0",
        "husky": "^4.2.5",
        "prettier": "^2.1.0",
        "pretty-quick": "^3.0.0",
        "rollup": "^2.26.5",
        "typedoc": "^0.18.0",
        "typescript": "^4.0.2"
    },
    "dependencies": {
        "axios": "0.20.0",
        "bootstrap-vue": "^2.15.0",
        "vue": "2.6.12",
        "vue-router": "3.4.3",
        "vuex": "3.5.1"
    },
    "peerDependencies": {
        "@msgpack/msgpack": "^1.12.2",
        "vue-multiselect": "^2.1.6"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged --pattern \"**/*.*(js|json)\""
        }
    }
}
